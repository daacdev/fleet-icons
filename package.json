{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn icons:generate && preconstruct dev",
    "prepare": "is-ci || husky install",
    "icons:generate": "yarn workspace fleet-icons generate",
    "docs:deploy": "yarn workspace docs deploy",
    "build": "preconstruct build",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.d.ts,.json",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "typecheck": "tsc --noEmit",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@preconstruct/cli": "^2.1.0",
    "@testing-library/dom": "^8.0.0",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/styled-components": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-jest": "^27.0.5",
    "babel-plugin-styled-components": "^1.12.0",
    "bootstrap-icons": "^1.5.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.5",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^11.0.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/fleet-icons"
    ]
  }
}
